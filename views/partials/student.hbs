
<div id="banner-wrapper">
    <div id="banner" class="box container" style="background-image: url('images/bkg.jpg');background-repeat:round" >
        {{#if hasErrors}}
            <div style="background-color: antiquewhite;padding:0 10px;border:1px red solid;border-radius: 3px;margin-bottom: 3px">
                {{# each messages}}
                    <p>{{this}}</p>
                {{/each}}
            </div>
        {{/if}}
        {{#if isSent}}
            <div style="background-color: #DFF2BF;padding:0 10px;border:1px black solid;border-radius: 3px;margin-bottom: 3px">
                {{# each successContact}}
                    <p style="color: #4F8A10;">{{this}}</p>
                {{/each}}
            </div>
        {{/if}}

        <div class="row">
            <div class="7u 12u(medium)">
                <h2 style="color:#f7f7f7">Welcome {{user.name.last}}</h2>
                <p style="color: black">We're glad to have you with us</p>
            </div>
            <div class="5u 12u(medium)">
                <ul>
                    <li><a href='/following' style="font-size:2em;" class="button big icon fa-caret-square-o-right">You're following  {{following}} </a></li>
                    <li  style="border-radius: 5px;background: #ebebec;">
                        <a href="#relatedCourses" class="button alt big icon fa-arrow-circle-down">Related courses</a></li>
                </ul>
            </div>
        </div>
    </div>
</div>


<!-- Features -->

<div id="features-wrapper">
    <div class="container">
        <div id='relatedCourses' style="width:  100%;background-color: white;border-radius: 5px;padding: 10px 20px;margin-bottom: 10px">
            <h2 style="margin: 0"><i class="fa fa-th-large" aria-hidden="true"></i>
               Related courses
                <a href="/formations?cat={{relatedCat}}" style="float: right;border-radius:5px;border: 1px black solid;padding: 0 5px;font-size:0.6em"> See more <i class="fa fa-arrow-right" aria-hidden="true"></i></a>
            </h2>
        </div>
        <div class="row">

            {{#each relatedFormations }}
                <div class="4u 6u(medium) 12u(small)">

                    <!-- Box -->
                    <section class="box feature" style="height: 350px;overflow: auto;">
                        <div class="youtube" data-embed="{{this.vId}}" style="width: 100%">

                            <!-- (2) the "play" button -->
                            <div class="play-button"></div>

                        </div>

                        <div class="inner" style="padding: 1em;">
                            <header style="margin: 0;">
                                <i class="fa fa-users" aria-hidden="true"></i>
                                : {{this.nbFollowers}} following
                                <h2>{{this.formName}}</h2>
                                <p>By {{this.former.name}}</p>
                            </header><hr style="margin: 0">
                            <p>{{this.formDescription}}</p>
                            <form action="/watchLater" method="post">
                                <input type="hidden" name="formationId" value="{{this._id}}">
                                <input type="submit" value="Watch it later" style="padding: 0">
                            </form>
                        </div>
                    </section>

                </div>

            {{/each}}
        </div>
    </div>
</div>
